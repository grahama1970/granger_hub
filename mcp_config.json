{
  "name": "cmc-server",
  "version": "1.0.0",
  "description": "MCP server for cmc-server",
  "server": {
    "command": "/home/graham/workspace/experiments/granger_hub/.venv/bin/python",
    "args": [
      "/home/graham/workspace/experiments/granger_hub/.venv/bin/cmc-cli",
      "serve-mcp",
      "--host",
      "localhost",
      "--port",
      "5000"
    ]
  },
  "tools": {
    "register": {
      "description": "Register a new module.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Parameter: name"
          },
          "module_class": {
            "type": "string",
            "description": "Parameter: module_class"
          },
          "schema_file": {
            "type": "string",
            "description": "Parameter: schema_file"
          }
        },
        "required": []
      }
    },
    "discover": {
      "description": "Discover available modules.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "pattern": {
            "type": "string",
            "description": "Parameter: pattern"
          }
        },
        "required": []
      }
    },
    "send": {
      "description": "Send a message to a target module.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "target": {
            "type": "string",
            "description": "Parameter: target"
          },
          "action": {
            "type": "string",
            "description": "Parameter: action"
          },
          "data": {
            "type": "string",
            "description": "Parameter: data"
          },
          "timeout": {
            "type": "integer",
            "description": "Parameter: timeout"
          }
        },
        "required": []
      }
    },
    "execute": {
      "description": "Execute a natural language instruction.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "instruction": {
            "type": "string",
            "description": "Parameter: instruction"
          },
          "requester": {
            "type": "string",
            "description": "Parameter: requester"
          },
          "task_type": {
            "type": "string",
            "description": "Parameter: task_type"
          },
          "params_file": {
            "type": "string",
            "description": "Parameter: params_file"
          }
        },
        "required": []
      }
    },
    "broadcast": {
      "description": "Broadcast a message to multiple modules.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Parameter: action"
          },
          "data": {
            "type": "string",
            "description": "Parameter: data"
          },
          "pattern": {
            "type": "string",
            "description": "Parameter: pattern"
          }
        },
        "required": []
      }
    },
    "graph": {
      "description": "Display the module dependency graph.",
      "inputSchema": {
        "type": "object",
        "properties": {},
        "required": []
      }
    },
    "check-compat": {
      "description": "Check compatibility between two modules.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "Parameter: source"
          },
          "target": {
            "type": "string",
            "description": "Parameter: target"
          }
        },
        "required": []
      }
    },
    "progress": {
      "description": "Display communication progress.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "session_id": {
            "type": "string",
            "description": "Parameter: session_id"
          },
          "tail": {
            "type": "integer",
            "description": "Parameter: tail"
          }
        },
        "required": []
      }
    },
    "version": {
      "description": "Show version information.",
      "inputSchema": {
        "type": "object",
        "properties": {},
        "required": []
      }
    },
    "health": {
      "description": "Check system health.",
      "inputSchema": {
        "type": "object",
        "properties": {},
        "required": []
      }
    }
  },
  "capabilities": {
    "tools": true,
    "prompts": false,
    "resources": false
  }
}